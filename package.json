{
  "name": "linear-zapier",
  "version": "4.1.0",
  "description": "Linear's Zapier integration",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "zapier-build": "tsc",
    "zapier-dev": "tsc --watch",
    "zapier-validate": "npm run zapier-build && zapier validate",
    "zapier-push": "npm run zapier-validate && zapier push",
    "prepare": "npm run zapier-build && husky install",
    "pretest": "npm run zapier-build",
    "test": "jest --passWithNoTests lib",
    "prettier": "npx prettier --write **/*.{json,ts,js} **/**/*.{json,ts,js}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@types/lodash": "4.14.202",
    "json-to-graphql-query": "2.3.0",
    "lodash": "4.17.21",
    "zapier-platform-core": "15.5.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.11.9",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.8.1"
  }
}
